<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
 <link rel="stylesheet" href="/style.css"> 
</head>
<body>
   
    <article class="product-detail">

        <div class="product-container2" style="height: 300px">
            <a class="img-container2" href="https://amzn.to/2WX7vtD">
              <span class="small-overlayer"></span>
              <img src="<%=data['Product-picture-Link'] %>" alt="desk lamp">
            </a>
           
            <a class="product-info2" href="#">
              <div>
                <p><%=data.name %> </p>
                <p><%= data.Company %> </p>
              </div>
              <p>$<%= data.Price %> </p>
          
            </a>
            <form id="update-form" action=<%=`/update/${data._id} `%> method="POST"  class="hide">
                <input type="text" name="name" placeholder="name">
                <br>
                <input type="text" name="company" placeholder="company">
                <br>
                <input type="text" name="price" placeholder="price">
                <br>
                <input type="text" name="img-url" placeholder="img-url">
                <br>
                <input type="submit" value="confirm changes">
            </form>
            <button id="update-form-btn">Update</button> <button data-id="<%=data._id %>" id="delete-btn">DELETE</button> 
          </div>
    </article>
<script>
const updateBtn = document.getElementById("update-form-btn")
const updateForm = document.getElementById("update-form")
const deleteBtn = document.getElementById("delete-btn")
updateBtn.addEventListener("click",(e) => {
  updateForm.classList.toggle("hide")
})
deleteBtn.addEventListener("click",(e) => {
    fetch(`/delete/${event.target.dataset.id}`,{ method: 'DELETE'})
  .then(response => response.json())
  .then((data) => {
    window.location.href = data.redirect
  })
  .catch((err) => {
    console.log(err)
  })
console.log(event.target.dataset.id)

})


</script>

</body>
</html>